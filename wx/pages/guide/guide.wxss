.page {
  position: relative;
  width: 100%;
  height: 100%;
  background: #05070f;
  color: #e2e8f0;
  overflow: hidden;
  font-family: "PingFang SC", "Microsoft YaHei", "SFMono-Regular", "Menlo", monospace;
}

.bg-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.04) 1px, transparent 1px);
  background-size: 40rpx 40rpx;
  opacity: 0.35;
}

.content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx 24rpx 36rpx;
  box-sizing: border-box;
}

.header-card {
  display: flex;
  gap: 20rpx;
  align-items: center;
  background: rgba(15, 23, 42, 0.8);
  border: 2rpx solid rgba(148, 163, 184, 0.2);
  border-radius: 24rpx;
  padding: 20rpx;
  backdrop-filter: blur(20px);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.4);
}

.brand-icon {
  width: 84rpx;
  height: 84rpx;
  border-radius: 20rpx;
  border: 3rpx solid #38bdf8;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(2, 6, 23, 0.8);
}

.brand-emoji {
  font-size: 40rpx;
}

.header-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.brand-name {
  font-size: 32rpx;
  font-weight: 900;
  letter-spacing: 2rpx;
}

.strategy-tag {
  align-self: flex-start;
  font-size: 18rpx;
  font-weight: 800;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  border: 2rpx solid;
}

.strategy-text {
  font-size: 20rpx;
  line-height: 1.5;
  color: #cbd5f5;
}

.prompt-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(9, 12, 22, 0.85);
  border: 2rpx solid rgba(148, 163, 184, 0.25);
  border-radius: 24rpx;
  backdrop-filter: blur(20px);
  box-shadow: inset 0 0 24rpx rgba(0, 0, 0, 0.6), 0 20rpx 40rpx rgba(0, 0, 0, 0.45);
}

.prompt-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.prompt-title {
  font-size: 22rpx;
  font-weight: 900;
  color: #93c5fd;
}

.copy-btn {
  background: rgba(59, 130, 246, 0.2);
  color: #93c5fd;
  font-size: 18rpx;
  font-weight: 800;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.5);
}

.prompt-scroll {
  flex: 1;
  background: rgba(2, 6, 23, 0.8);
  border-radius: 18rpx;
  border: 2rpx dashed rgba(148, 163, 184, 0.35);
  box-shadow: inset 0 0 18rpx rgba(0, 0, 0, 0.6);
  padding: 18rpx;
}

.prompt-text {
  font-family: "SFMono-Regular", "Menlo", monospace;
  font-size: 20rpx;
  line-height: 1.7;
  white-space: pre-wrap;
}

.action-bar {
  padding-top: 6rpx;
}

.action-btn {
  width: 100%;
  padding: 22rpx 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(120deg, #22c55e, #16a34a);
  color: #04120a;
  font-weight: 900;
  font-size: 24rpx;
  border: 4rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
}

.pulse {
  animation: pulseGlow 2.2s ease-in-out infinite;
}

@keyframes pulseGlow {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.45);
  }
  70% {
    transform: scale(1.02);
    box-shadow: 0 0 0 18rpx rgba(34, 197, 94, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
  }
}
